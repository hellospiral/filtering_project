      <h1><%= @organization.name %></h1>
      <h5 class='darker-grey hidden-xs'><%= @organization.description %></h5>
    </div>
  </div>
  <div class='row'>
    <div class='col-sm-4'>
      <%= render 'eligibilities' %>
    </div>
    <div class='col-sm-8'>
      <%= render 'locations' %>
    </div>
  </div>
</div>
<hr>
<%= link_to "Home", organizations_path, class: 'btn btn-primary' %>
