<% provide(:title, "All Organizations") %>
<div class='container'>
  <div class='row'>
    <div class="col-xs-12 col-sm-4">
      <%= render 'filters' %>
    </div>

    <div class='col-xs-12 col-sm-8'>
      <ul class='list-group'>
        <% if @organizations.any? %>
          <%= render @organizations %>
        <% else %>
          <h4>There are no organizations matching your search criteria.</h4>
        <% end %>
      </ul>
    </div>
  </div>
</div>
