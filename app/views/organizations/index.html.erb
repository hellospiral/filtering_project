<% provide(:title, "All Organizations") %>

<%= render @organizations %>

<h2>Filter organizations</h2>
<%= form_tag organizations_path, method: 'get' do %>
  <% @eligibilities.each do |eligibility| %>
    <%= check_box_tag "eligibilities[]", eligibility.name  %>
    <%= label_tag eligibility.name %>
  <% end %>
  <br>
  <%= radio_button_tag 'filter_type', 'Accepts any', true %>
  <%= label_tag 'Accepts any' %>
  <%= radio_button_tag 'filter_type', 'Accepts all' %>
  <%= label_tag 'Accepts all' %>
  <br>
  <%= submit_tag 'Apply filter' %>
<% end %>
